pipeline {
    agent {
        dockerfile {
            filename 'ci/Dockerfile'
            label 'docker'
        }
    }
    options {
        timeout(time: 10, unit: 'MINUTES')
    }
    environment {
        HOME = "$WORKSPACE"
    }
    stages {
        stage('Build') {
            steps {
                sh 'python3 -m pip install -U pip'
                sh 'python3 -m pip install -v -Ccompile-args="-j$PARALLEL" .[test]'
            }
        }
        stage('Test') {
            environment {
                OMP_NUM_THREADS = "${env.PARALLEL}"
            }
            steps {
                sh 'python3 -m pytest -v'
            }
        }
    }
}
